[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .env
ignore = 
    E203,
    W503,
    E501,
    F401,
    F403,
    F405,
per-file-ignores =
    __init__.py:F401
    tests/*:F401 